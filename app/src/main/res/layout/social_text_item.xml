<?xml version="1.0" encoding="utf-8"?>
<no.mesan.faghelg.view.social.TextSocialItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/message_text"
            android:layout_width="match_parent"
            style="@style/list_title"
            android:textColor="@color/mesanblue"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_l"
            android:layout_marginBottom="@dimen/padding_m"
            android:layout_marginTop="@dimen/padding_xl"/>

        <include layout="@layout/social_item_author_info"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@id/message_text"
            android:layout_marginBottom="@dimen/social_message_margin_bottom"/>

    </RelativeLayout>

</no.mesan.faghelg.view.social.TextSocialItemView>