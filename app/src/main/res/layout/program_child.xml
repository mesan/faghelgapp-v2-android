<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:layout_marginStart="@dimen/padding_l"
        android:layout_marginTop="@dimen/padding_l"
        android:id="@+id/imgEvent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgEvent"
        android:src="@mipmap/ic_launcher"
        android:layout_marginStart="@dimen/padding_l"
        android:layout_marginTop="24dp"
        android:id="@+id/imgProfile" />

    <TextView
        android:text="Navn Navnesen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imgProfile"
        android:layout_toEndOf="@+id/imgProfile"
        android:layout_marginStart="@dimen/padding_l"
        android:id="@+id/txtName" />

    <TextView
        android:text="navnn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtName"
        android:layout_alignStart="@id/txtName"
        android:id="@+id/txtNick" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNick"
        android:layout_alignStart="@+id/txtNick"
        android:layout_marginTop="@dimen/padding_l"
        android:id="@+id/txtDescription" />

</RelativeLayout>