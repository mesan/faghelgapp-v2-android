<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/padding_l">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/cameraImage"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/discardCameraImage"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignEnd="@id/cameraImage"
                android:layout_alignTop="@id/cameraImage"
                android:layout_marginEnd="50dp"
                android:src="@drawable/image_close"
                android:visibility="gone" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:inputType="textCapSentences|textMultiLine"
                android:hint="@string/message"
                android:ems="10"
                android:maxLength="140"
                android:gravity="top"
                android:paddingTop="@dimen/padding_xl"
                android:textColorHint="@color/mesanbluelight"
                android:textSize="@dimen/text_size_xl"
                android:textColor="@color/mesanblue"
                android:id="@+id/editContent" />

            <ImageButton
                android:id="@+id/buttonReset"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:tint="@color/netcompanybluedark"
                android:visibility="invisible"
                android:background="@drawable/transparent_ripple_button"
                android:src="@drawable/ic_close" />

            <TextView
                android:id="@+id/textCharacterCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/editContent"
                android:layout_marginBottom="@dimen/padding_l"
                android:layout_alignParentEnd="true"
                android:text="0/140"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageButton
                android:id="@+id/btnCamera"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_camera" />

            <Button
                android:id="@+id/btnSend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@drawable/button_send"
                android:text="@string/send"
                android:textAllCaps="false"
                android:textColor="@color/white" />
        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
