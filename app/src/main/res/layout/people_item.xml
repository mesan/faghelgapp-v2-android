<?xml version="1.0" encoding="utf-8"?>
<no.mesan.view.people.PeopleItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/padding_m">

    <ImageView
        android:id="@+id/imageViewPerson"
        android:layout_width="@dimen/person_image_size"
        android:layout_height="@dimen/person_image_size"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewPersonFullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/textViewPersonShortName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</no.mesan.view.people.PeopleItemView>