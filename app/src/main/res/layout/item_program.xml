<?xml version="1.0" encoding="utf-8"?>
<no.mesan.view.expandablelayout.ExpandableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/expandable_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_l"
    app:expWithParentScroll="true"
    app:expDuration="400"
    app:expExpandScrollTogether="false">

    <RelativeLayout
        android:id="@+id/first_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/event_title"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/event_timestamp"
            android:layout_marginEnd="@dimen/padding_m"
            style="@style/list_title"
            android:textColor="@color/mesanblue"
            android:text="Tittel"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/event_timestamp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/event_title"
            style="@style/H1"
            android:textColor="@color/mesanblue"
            android:text="Tid"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="200dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginTop="@dimen/padding_m"
            android:id="@+id/imgEvent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="80dp"
            android:layout_below="@+id/imgEvent"
            android:src="@mipmap/ic_launcher"
            android:layout_marginTop="24dp"
            android:id="@+id/imgProfile" />

        <TextView
            android:text="Navn Navnesen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imgProfile"
            android:layout_toEndOf="@+id/imgProfile"
            android:textColor="@color/mesanblue"
            android:id="@+id/txtName" />

        <TextView
            android:text="navnn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtName"
            android:layout_alignStart="@id/txtName"
            android:textColor="@color/greyish"
            android:id="@+id/txtNick" />

        <TextView
            android:text="Tekst som beskriver eventet"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_below="@+id/txtNick"
            android:layout_alignStart="@+id/txtNick"
            android:layout_marginTop="@dimen/padding_l"
            android:textColor="@color/mesanblue"
            android:id="@+id/txtDescription" />

    </RelativeLayout>

</no.mesan.view.expandablelayout.ExpandableLayout>