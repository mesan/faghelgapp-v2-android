<?xml version="1.0" encoding="utf-8"?>
<no.mesan.faghelg.view.program.EventItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/expandable_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_l">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/event_title"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/event_timestamp"
        android:layout_marginEnd="@dimen/padding_m"
        style="@style/list_title"
        android:textColor="@color/mesanblue"
        android:text="Tittel"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/event_timestamp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/event_title"
        style="@style/H1"
        android:textColor="@color/greyish"
        android:text="Tid"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtHosts"
        android:layout_below="@id/event_title"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/event_timestamp"
        style="@style/undertext"
        android:textColor="@color/greyish"
        android:text="Donald Duck og Mikke Mus"/>

</no.mesan.faghelg.view.program.EventItemView>