<?xml version="1.0" encoding="utf-8"?>
<no.mesan.faghelg.view.social.ImageSocialItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/padding_l">

        <ImageView
            android:id="@+id/message_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:minHeight="@dimen/person_image_size"
            android:scaleType="fitCenter"
            android:visibility="gone" />

        <include
            layout="@layout/social_item_author_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/message_image"
            android:layout_marginTop="@dimen/social_author_image_half_height" />

    </RelativeLayout>

</no.mesan.faghelg.view.social.ImageSocialItemView>