<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="colorControlNormal">@color/dark_grey</item>-->
        <item name="colorControlActivated">@color/dark_grey</item>
        <item name="colorControlHighlight">@color/dark_grey</item>
        <item name="android:textColorSecondary">@color/grey</item>
    </style>

    <style name="ToolbarStyle" parent="@style/AppTheme">
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="H1" >
        <item name="fontPath">fonts/Roboto-Light.ttf</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="list_title" >
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
        <item name="android:textSize">23sp</item>
    </style>

    <style name="title_tab" >
        <item name="fontPath">fonts/Roboto-Bold.ttf</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="p" >
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="undertext" >
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="subtitle" >
        <item name="fontPath">fonts/Roboto-Bold.ttf</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="breadtext" >
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="timestamp" >
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="below_icon" >
        <item name="fontPath">fonts/Roboto-Light.ttf</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="Label">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Content">
        <item name="android:layout_marginBottom">@dimen/padding_m</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CellContent">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Button">
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">@dimen/padding_l</item>
    </style>

    <style name="Theme.Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimAmount">0.05</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>
